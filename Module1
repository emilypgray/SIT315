int LED = 10;
int sensor = 2;
int magField;

void setup() {
  pinMode(LED, OUTPUT);
  pinMode(sensor, INPUT);
  Serial.begin(9600);
}

void loop() {

  magField = digitalRead(sensor);
  Serial.print("Magnetic field present: ");
  if(magField == HIGH){
  digitalWrite(LED, HIGH);
  Serial.print("True, ");
    Serial.println("LED On");
  } else{
    digitalWrite(LED, LOW);
    Serial.print("False, ");
    Serial.println("LED Off");
  }
  delay(10);
}
